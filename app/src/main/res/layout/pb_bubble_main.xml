<?xml version="1.0" encoding="utf-8"?>
<com.txusballesteros.bubbles.HoverBubble xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="true"
    android:clipToPadding="false">

    <FrameLayout
        android:id="@+id/pb_bubble_main_layout_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pb_bubble_main_iv_privateBrowsing"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/pb_bubble_icon" />

    </FrameLayout>


</com.txusballesteros.bubbles.HoverBubble>